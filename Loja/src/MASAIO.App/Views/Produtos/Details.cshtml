@model MASAIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto: " + Model.Nome;
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <div class="col-md-4">
            <dt class="col-sm-2">
                <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem"  style="width:300px; height:428px;"/>
            </dt>
        </div>
        <div class="col-md-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.Nome)
            </dd>
        </div>
    </dl>
</div>
<div>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a class="btn btn-info" asp-action="Index">Voltar</a>
</div>
